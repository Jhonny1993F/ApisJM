<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ApisJM.Models"
             x:Class="ApisJM.Views.DogsListPage"
             Title="DogsListPage">
    <Grid RowDefinitions="*,Auto">
        <CollectionView x:Name="dogsList"
                        SelectionMode="Single"
                        SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:DogsJM">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding id}" />
                        <Label Grid.Column="1" Text="{Binding url}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" Text="AÃ±adir nuevo registro" Clicked="OnItemAdded" Margin="20"/>
    </Grid>
</ContentPage>